@model AddQuizModel

@{
    ViewData["Title"] = "Edit Quiz";
}

<form asp-action="Edit" asp-controller="Quiz" method="post">
    <input type="hidden" asp-for="AuthorId" />
    <div class="form-group">
        <label asp-for="Question">Question:</label>
        <textarea asp-for="Question" rows="5" class="form-control"></textarea>
        <span asp-validation-for="Question" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Answer">Answer:</label>
        <textarea asp-for="Answer" rows="5" class="form-control"></textarea>
        <span asp-validation-for="Answer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="QuestionTypeId">Question Type:</label>
        <select asp-for="QuestionTypeId" class="form-control">
            @foreach (var questionType in Model.QuestionTypes)
            {
                <option value="@questionType.Id">@questionType.Name</option>
            }
        </select>
        <span asp-validation-for="QuestionTypeId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>